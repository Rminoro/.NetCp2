@model Checkpoint2.Models.Categoria

@{
    ViewBag.Title = "Excluir Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excluir Categoria</h2>

<h3>Tem certeza que deseja excluir esta categoria?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    <hr />
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" /> <!-- Botão de confirmação de exclusão -->
</form>

<div>
    <a asp-action="Index" class="btn btn-default">Cancelar</a> <!-- Link para cancelar e voltar à lista de categorias -->
</div>
