@model IEnumerable<Checkpoint2.Models.Categoria>

@{
    ViewBag.Title = "Lista de Categorias";
}

<h2>Lista de Categorias</h2>

<p>
    @Html.ActionLink("Criar Nova Categoria", "Create") <!-- Link para criar nova categoria -->
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome) <!-- Cabeçalho da coluna Nome -->
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao) <!-- Cabeçalho da coluna Descrição -->
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome) <!-- Exibe o Nome da categoria -->
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao) <!-- Exibe a Descrição da categoria -->
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { onclick = "return confirm('Tem certeza que deseja excluir esta categoria?')" })
            </td>
        </tr>
    }
</table>
